<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="MUJ SDC Employee Dashboard">
    <title>My Tasks | MUJ SDC</title>
    <link rel="stylesheet" href="/styles.css">
</head>

<body class="dashboard-page">
    <header class="header">
        <div class="header-content">
            <div class="header-left">
                <h1>MUJ SDC</h1>
            </div>
            <div class="header-right">
                <div class="user-info">
                    <span class="user-name">
                        <%= userName %>
                    </span>
                    <span class="user-role">
                        <%= userRole %>
                    </span>
                </div>
                <a href="/logout" class="logout-button">Logout</a>
            </div>
        </div>
    </header>

    <main class="main-content">
        <div class="dashboard-header">
            <h2>My Tasks</h2>
            <p class="subtitle">Your assigned tasks</p>
        </div>

        <div class="table-container">
            <table class="data-table">
                <thead>
                    <tr>
                        <th>S.No</th>
                        <th>Task Title</th>
                        <th>Description</th>
                        <th>Status</th>
                        <th>Created</th>
                    </tr>
                </thead>
                <tbody>
                    <% tasks.forEach((task, index)=> { %>
                        <tr>
                            <td>
                                <%= index + 1 %>
                            </td>
                            <td>
                                <%= task.title %>
                            </td>
                            <td>
                                <%= task.description || '-' %>
                            </td>
                            <td>
                                <span class="status-badge status-<%= task.status.toLowerCase().replace('_', '-') %>">
                                    <%= task.status.replace('_', ' ' ) %>
                                </span>
                            </td>
                            <td>
                                <%= new Date(task.createdAt).toLocaleDateString('en-IN') %>
                            </td>
                        </tr>
                        <% }); %>
                            <% if (tasks.length===0) { %>
                                <tr>
                                    <td colspan="5" class="no-data-cell">No tasks assigned</td>
                                </tr>
                                <% } %>
                </tbody>
            </table>
        </div>

        <div class="table-footer">
            <p>Total: <%= tasks.length %> |
                    Pending: <%= tasks.filter(t=> t.status === 'PENDING').length %> |
                        In Progress: <%= tasks.filter(t=> t.status === 'IN_PROGRESS').length %> |
                            Completed: <%= tasks.filter(t=> t.status === 'COMPLETED').length %>
            </p>
        </div>
    </main>
</body>

</html>