<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="MUJ SDC Admin Dashboard">
    <title>Dashboard | MUJ SDC</title>
    <link rel="stylesheet" href="/styles.css">
</head>

<body class="dashboard-page">
    <header class="header">
        <div class="header-content">
            <div class="header-left">
                <h1>MUJ SDC</h1>
            </div>
            <div class="header-right">
                <div class="user-info">
                    <span class="user-name">
                        <%= userName %>
                    </span>
                    <span class="user-role">
                        <%= userRole %>
                    </span>
                </div>
                <a href="/logout" class="logout-button">Logout</a>
            </div>
        </div>
    </header>

    <main class="main-content">
        <div class="dashboard-header">
            <h2>Employee Task Overview</h2>
            <p class="subtitle">All assigned tasks across employees</p>
        </div>

        <div class="table-container">
            <table class="data-table">
                <thead>
                    <tr>
                        <th>S.No</th>
                        <th>Employee Name</th>
                        <th>Email</th>
                        <th>Task Title</th>
                        <th>Description</th>
                        <th>Status</th>
                        <th>Created</th>
                    </tr>
                </thead>
                <tbody>
                    <% let serialNo=1; %>
                        <% employees.forEach(employee=> { %>
                            <% if (employee.tasks.length===0) { %>
                                <tr>
                                    <td>
                                        <%= serialNo++ %>
                                    </td>
                                    <td>
                                        <%= employee.name %>
                                    </td>
                                    <td>
                                        <%= employee.email %>
                                    </td>
                                    <td colspan="4" class="no-tasks-cell">No tasks assigned</td>
                                </tr>
                                <% } else { %>
                                    <% employee.tasks.forEach((task, index)=> { %>
                                        <tr>
                                            <td>
                                                <%= serialNo++ %>
                                            </td>
                                            <% if (index===0) { %>
                                                <td rowspan="<%= employee.tasks.length %>">
                                                    <%= employee.name %>
                                                </td>
                                                <td rowspan="<%= employee.tasks.length %>">
                                                    <%= employee.email %>
                                                </td>
                                                <% } %>
                                                    <td>
                                                        <%= task.title %>
                                                    </td>
                                                    <td>
                                                        <%= task.description || '-' %>
                                                    </td>
                                                    <td>
                                                        <span
                                                            class="status-badge status-<%= task.status.toLowerCase().replace('_', '-') %>">
                                                            <%= task.status.replace('_', ' ' ) %>
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <%= new Date(task.createdAt).toLocaleDateString('en-IN') %>
                                                    </td>
                                        </tr>
                                        <% }); %>
                                            <% } %>
                                                <% }); %>
                                                    <% if (employees.length===0) { %>
                                                        <tr>
                                                            <td colspan="7" class="no-data-cell">No employees found</td>
                                                        </tr>
                                                        <% } %>
                </tbody>
            </table>
        </div>

        <div class="table-footer">
            <p>Total Employees: <%= employees.length %> |
                    Total Tasks: <%= employees.reduce((sum, emp)=> sum + emp.tasks.length, 0) %> |
                        Pending: <%= employees.reduce((sum, emp)=> sum + emp.tasks.filter(t => t.status ===
                            'PENDING').length, 0) %> |
                            In Progress: <%= employees.reduce((sum, emp)=> sum + emp.tasks.filter(t => t.status ===
                                'IN_PROGRESS').length, 0) %> |
                                Completed: <%= employees.reduce((sum, emp)=> sum + emp.tasks.filter(t => t.status ===
                                    'COMPLETED').length, 0) %>
            </p>
        </div>
    </main>
</body>

</html>